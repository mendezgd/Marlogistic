---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contact',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Contacto" title="Escribinos!" />

  <ContactUs
    id="form"
    title="Dejanos tu mensaje"
    subtitle="Estamos aquí para ayudarte. Completa el formulario y nuestro equipo de soporte te responderá en un plazo de 24 horas hábiles. Tu satisfacción es nuestra prioridad."
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Nombre',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email',
      },
    ]}
    textarea={{
      label: 'Mensaje',
    }}
    description="Nuestro equipo generalmente responde dentro de las 24 horas hábiles."
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Estamos para ayudarte!"
    items={[
      {
        title: 'Teléfono',
        description: '54 9 11 47566384',
        icon: 'tabler:headset',
      },
      {
        title: 'Email',
        description: 'pedidos@marlogistic.com.ar',
        icon: 'tabler:mail',
      },
      {
        title: 'Ubicación',
        description: 'General alfredo rodriguez 1137, Hurlingham',
        icon: 'tabler:map-pin',
      },
    ]}
  />
</Layout>
